<!-- Insert all the book fields accordingly to our schema -->


<div>
  <label>Page Count</label>
  <input
    type="number"
    name="pageCount"
    min="1"
    value="<% book.pageCount %> "
  >
</div>

<div>
  <label>Cover</label>
  <input
    type="file"
    name="cover"
  >
</div>

<div>
  <label>Description</label>
  <textarea
    type="text"
    name="description"
  ><%= book.description %> </textarea>
</div>
