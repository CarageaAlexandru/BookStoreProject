<div class="form-row">
  <div class="form-item">
      <label>Title</label>
      <input required type="text" name="title" value="<%= book.title %>">
  </div>

  <div class="form-item">
    <label>Author</label>
    <select required name="author">
      <% authors.forEach(author => { %> <% if (author.id === book.author) { %>
      <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
      </option>
      <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %> <% }) %>
      </option>
    </select>
  </div>
</div>
<!-- We need to convert publishDate to match our date type -->

<div class="form-row">
  <div class="form-item">
    <label>Publish Date</label>
    <input required type="date" name="publishDate"
      value="<%= book.publishDate == null?'' : book.publishDate.toISOString().split('T')[0]%>">
  </div>
  <div class="form-item">
    <label>Page Count</label>
    <input required type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
  </div>
</div>
